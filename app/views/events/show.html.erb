<div class="row">
  <div class="ml-4 mt-4 col-md-4">

    <%= link_to 'Back', events_path, :class => "btn btn-primary" %>

    <div class="event-info mt-4 pt-4">
      <h1>Event</h1>
      <p>
        <strong>Artist:</strong>
        <%= @event.artist %>
      </p>
  
      <p>
        <strong>Description:</strong>
        <%= @event.description %>
      </p>
  
      <p>
        <strong>Price low:</strong>
        <%= @event.price_low %>
      </p>
  
      <p>
        <strong>Price high:</strong>
        <%= @event.price_high %>
      </p>
  
      <p>
        <strong>Event date:</strong>
        <%= @event.event_date %>
      </p>
    </div>
  </div>
  <div class="col-md-6">
    <%= render "new_ticket", ticket: current_user.tickets.new(:event_id=>@event.id), :class => "btn btn-success" %> 
  </div>
</div>
  <div class="footer text-center">
    
    <br/>
    
    <h2>Bought tickets</h2>
    
    <br/>
    
    <%= render "tickets_list", tickets: @event.tickets %>
  </div>